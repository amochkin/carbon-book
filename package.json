{
	"name": "carbon-book",
	"version": "1.0.0",
	"description": "Hugo theme based on [IBM Carbon Design System](https://carbondesignsystem.com/)",
	"scripts": {
		"dev": "hugo server -b http://localhost:1313",
		"pagefind:index": "pagefind --site public --serve",
		"prettier": "prettier --write .",
		"dev:no-fast-render": "hugo server -b http://localhost:1313 --disableFastRender",
		"clean": "rm -rf public resources/_gen resources/_gen-assets",
		"build": "hugo --gc --minify --templateMetrics --templateMetricsHints --forceSyncStatic",
		"preview": "hugo server --disableFastRender --navigateToChanged --templateMetrics --templateMetricsHints --watch --forceSyncStatic -e production --minify",
		"npm:reset": "rm -rf ./**/node_modules && rm -rf ./**/package-lock.json && npm install",
		"npm:audit": "npm audit --audit-level=moderate",
		"postinstall": "lefthook install"
	},
	"author": "A. Mochkin <https://github.com/amochkin>",
	"license": "ISC",
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@p8ec/shared": "^2.4.2",
		"commitlint": "^19.8.1",
		"lefthook": "^1.12.3",
		"pagefind": "^1.3.0",
		"prettier": "^3.6.2",
		"prettier-hugo-plugin": "^0.1.0"
	},
	"dependencies": {
		"@carbon/web-components": "^2.37.0"
	}
}
